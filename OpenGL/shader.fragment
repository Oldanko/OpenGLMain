#version 330 core

in vec2 TexCoord;
in vec3 Normal;

out vec4 outColor;

uniform sampler2D Texture;
uniform vec3 lightDirection;

//vec3 sunDir = normalize(vec3(1.0, 0.05, 1.0));


void main()
{

	if(texture(Texture, TexCoord).a < 0.7)
		discard;

	float power = max(dot(normalize(Normal), normalize(lightDirection)), 0.0);

	vec3 color = texture(Texture, TexCoord).rgb;
		
	outColor = vec4(vec3(0.05, 0.05, 0.05)*color + color * power, 1.0f);
	//outColor = vec4(vec3(power), 1.0);
}